{
    "name": "pilot114/recombinator",
    "type": "library",
    "description": "php recombinator",
    "prefer-stable": true,

    "require": {
        "php": "^8.4",
        "nikic/php-parser": "^5.7"
    },
    "require-dev": {
        "sebastian/diff": "^7.0",
        "pestphp/pest": "^4.0",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.1",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "scripts": {
      "test": "pest --compact",
      "coverage": "XDEBUG_MODE=coverage pest --compact --coverage",
      "check": [
        "phpstan analyse --memory-limit=1G",
        "rector process --dry-run",
        "phpcs src/ tests/"
      ],
      "fix": [
        "rector process",
        "phpcbf src/ tests/"
      ]
    },
    "authors": [
        {
            "name": "oleg chulkov",
            "email": "pilot114@bk.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "Recombinator\\": "src/"
        }
    },
    "config": {
        "platform": {
            "php": "8.4"
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
